.span-22.prepend-1.append-1.last
	%h1
		= @user.login	
	%hr
.span-10.prepend-1.append-1
	%h2
		karma:
		= @user.karma_total
.span-10.append-2.last
	%h2
		currency:
		= "#{@user.karma_current}&sect;"
.span-7.prepend-1
	%hr	
	%h3
		Winning Entries
	%ul
		- @winners.each do |w|
			%li
				= link_to w.winner.entry.title, request_path(w.winner.entry.request) + entry_path(w.winner.entry)
		- if @winners.empty?
			%li Nothing here!
.span-7
	%hr	
	%h3
		Recent Entries
	%ul
		- @entries.each do |e|
			%li
				= link_to e.title, request_path(e.request) + entry_path(e)
		- if @entries.empty?
			%li Nothing here!
.span-7.append-2.last
	%hr	
	%h3 
		Recent Requests
	%ul
		- @requests.each do |r|
			%li 
				= link_to r.title, request_path(r)
		- if @requests.empty?
			%li Nothing here!
.span-22.prepend-1.append-1.center.last
	%hr
	%h4
		View 
		= link_to "Gallery", :controller => 'users', :action => 'gallery', :id => @id
		of Winners
.span-22.prepend-1.append-1.last
	%p
		= link_to 'Edit Account Settings', edit_user_path(@user)
