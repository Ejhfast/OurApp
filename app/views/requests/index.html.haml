.span-17.prepend-1
	%h2
		List of Open Requests
.span-5.append-1.last
	%h2
		=link_to 'Refresh Filter', requests_path
.span-11.prepend-1
	- form_tag filter_by_category_requests_path, :method => 'get' do			
		%ul
			-@categories.each do |category|
				= category_list_item(category, @selected_categories)
			= submit_tag 'Filter'
.span-11.append-1.last			
	%h4
		Filter By
		= link_to 'Karma Awarded,', requests_path, :sort => 'karma'
		= link_to 'Just Posted,', requests_path, :sort => 'start'
		= link_to 'About to End', requests_path, :sort => 'end'
.span-22.prepend-1.append-1.last
	%table
		%tr.underline 
			%th Name
			%th Category
			%th Karma
			%th User
			%th Date Submitted
		- count = 0
		- @reqs.each do |r|
			- count = count + 1
			- color = "#7D90A5"
			- color = "white" unless count % 2 == 0
			%tr{:style => "background-color:#{color}"}
				%td
					= link_to r.title, request_path(r) 
				%td
					= Category.find(r.category_id).name
				%td
					= r.karma
				%td
					= link_to r.user.login, user_path(r.user) unless r.user == nil
				%td
					= r.submitted_long_ago
	%p
		= link_to "New Request", new_request_path
			
